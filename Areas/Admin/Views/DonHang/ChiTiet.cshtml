@model WebThucPham.Models.DonHang

@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
    int i = 0;
}


<div class="col-md-4">
    <h2>Đơn hàng: @Model.ID - @Model.NguoiNhan </h2>

    <table class="table">
        <tr>
            <th>Khách hàng</th>
            <td>
                @{
                    var khachHang = new WebThucPham.Models.mapKhachHang().ChiTiet(Model.idKhachHang ?? 0);
                    if (khachHang != null)
                    {
                        <span>@khachHang.TenKhachHang</span>
                    }
                }
            </td>
        </tr>
        <tr>
            <th>Người nhận</th>
            <td>
                @Model.NguoiNhan
            </td>
        </tr>

    </table>
    <a href="~/Admin/DonHang/ChiTiet?idDonHang=@Model.ID" class="btn btn-success">Cập nhật</a>
</div>
<div class="col-md-8">
    Sản phẩm đặt mua
    <table width="100%" class="table table-bordered">
        <thead>
            <tr>
                <th>TT</th>
                <th>Tên</th>
                <th>ĐVT</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>VAT</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in new WebThucPham.Models.mapChiTietDonHang().DanhSach(Model.ID))
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@item.TenSanPham</td>
                        <td>@item.DonViTinh</td>
                        <td>@item.SoLuong</td>
                        <td>@item.DonGia</td>
                        <td>@(item.MucThueVAT * 100)%</td>
                        <td>@item.ThanhTien</td>
                    </tr>
                }
                }
            </tbody>
        </table>
</div>