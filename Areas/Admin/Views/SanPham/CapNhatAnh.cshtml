@model WebThucPham.Models.SanPham

@{
    ViewBag.Title = "Cập nhật ảnh";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

@*
    Các điểm lưu ý
    1. Form có enctype = multipart/form-data
    2. Input type = file

*@

<div class="container">
    <form  method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cập nhật ảnh</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="TenSanPham">Hình ảnh</label>
                <div class="col-md-10">
                 <input type="file" name="file" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>

    </form>

</div>




